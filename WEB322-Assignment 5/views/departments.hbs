<div class="row">
 <div class="col-md-12">
 <h2>Departments </h2>
 <hr />
 
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <td>Department Number</td>
                        <td>Department Name</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                    <tr>
                        <td><a href="/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                    </tr>
                    {{else}}
                    <div class="col-md-12 text-center">
                        <strong> {{message}}</strong>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <input type="submit" method="post" action="/departments/add" class="btn btn-success pull-right" value="Add New Department">
 </div>
</div>